<% if logged_in? %>
  <%= form_for(entry.comments.build, remote: true) do |f| %>
    <div class="field">
  	  <%= f.hidden_field :entry_id, :value => entry.id %>
      <%= f.text_area :content, placeholder: "add new comment..." %>
    </div>
    <%= f.submit "Comment", class: "btn btn-primary" %>
  <% end %>
<% end %>
